defcode "dup",3,0,DUP        ; x -- x x
    PUSH_PAR0 B,C
    NEXT

; SWAP     x1 x2 -- x2 x1    swap top two items
defcode "swap",4,0,SWAP      ; x1 x2 -- x2 x1
    POP_PAR0 H,L
    PUSH_PAR H,L
    NEXT

defcode "rot",3,0,ROT        ; x1 x2 x3 -- x2 x3 x1
    SAVE_REGS B,C             ; x3 in BC
    POP_PAR0 H,L              ; x2 in HL
    POP_PAR0 D,E              ; x1 in DE
    EX DE,HL                 ; x1 in HL, x2 in DE
    PUSH_PAR0 D,E             ; x2 on stack
    PUSH_PAR H,L             ; PUSH x1 - x2 x3 x1
    RESTORE_REGS B,C          ; x1 in BC
    NEXT

defcode "-rot",4,0,NROT        ; x1 x2 x3 -- x3 x1 x2
    SAVE_REGS B,C             ; x3 in BC
    POP_PAR0 H,L              ; x2 in HL
    POP_PAR0 D,E              ; x1 in DE
    PUSH_PAR D,E             ; PUSH x1 - x3 x1
    PUSH_PAR H,L             ; PUSH x2 - x3 x1 x2
    RESTORE_REGS B,C          ; x2 in BC
    NEXT

; >R    ( x -- ) ( R: -- x )  Move  x from TOS to the return stack.
defcode ">r",2,0,TO_R
    PUSH_RET B,C
    POP_PAR0 B,C
    NEXT

; R@ r-fetch

defcode "drop",4,0,DROP      ; x --
    POP_PAR0 B,C		    ; drop top of stack
    NEXT

; OVER    x1 x2 -- x1 x2 x1
defcode "over",4,0,OVER
    POP_PAR0 H,L
    PUSH_PAR0 H,L
    PUSH_PAR H,L
    NEXT

; R>    ( -- x ) ( R: x -- )  Move x from the return stack to TOS
defcode "r>",2,0,R_FROM
    PUSH_PAR0 B,C
    POP_RET B,C
    NEXT

defcode "'",1,0,TICK                 ; ( -- addr ) PUSH code word ptr of following word
    jp LIT

