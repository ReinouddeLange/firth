; */MOD star-slash-mod

; +       n1/u1 n2/u2 -- n3/u3     add n1+n2
defcode "+",1,0,PLUS
    POP_PAR0 H,L
    add HL,BC
    loadWord B,C, H,L
    NEXT

; 2*      n1/u1 -- n2/u2            arithmetic left shift
defcode "2*",2,0,TWOSTAR
    sla C
    rl B
    NEXT

defcode "-",1,0,MINUS
    POP_PAR0 H,L
    or A
    sbc HL,BC
    loadWord B,C, H,L
    NEXT

; U/MOD   u1 u2 -- u1 u2    unsigned 16 / 16 -> r q
defcode "u/mod",5,0,USLASHMOD
    SAVE_REGS D,E
    POP_PAR0 B,C             ; DE = divisor
                            ; BC = dividend
    call divideWordByWord
    PUSH_PAR0 H,L           ; PUSH remainder,
    RESTORE_REGS B,C
    NEXT

; 2/      x1 -- x2                  arithmetic right shift
defcode "2/",2,0,TWOSLASH
    sra B
    rr C
    NEXT

